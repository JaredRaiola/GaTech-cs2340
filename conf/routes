# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PlayerFormController.index

# Players
GET     /players                    controllers.PlayerFormController.listPlayers
POST    /players                    controllers.PlayerFormController.createPlayer

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /armyview                    controllers.PlayerFormController.armyview
POST    /armyview                    controllers.PlayerFormController.armyview

# initial Territory claiming and setup
POST     /armyview/                    controllers.ArmySetUpController.createArmySetUpController(players: ArrayBuffer[Player], terrCont: TerritoryController)


GET     /armyview                     controllers.ArmySetUpController.claimTerritory(terr: Int)

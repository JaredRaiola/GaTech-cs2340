# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PlayerController.index

# Players
GET     /players                    controllers.PlayerController.listPlayers
POST    /players                    controllers.PlayerController.createPlayer
PUT    /players                    controllers.PlayerController.shuffle

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Players
GET     /armyview                    controllers.PlayerController.armyview
POST    /armyview                    controllers.PlayerController.armyview